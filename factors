#!/usr/bin/python3

import math

def factors(file):
    with open(file, 'r') as f:
        for line in f:
            n = int(line.strip())
            p, q = prime_factorization(n)
            print(f"n={p}*{q}")

def prime_factorization(n):
    if n % 2 == 0:
        return 2, n // 2

    sqrt_n = math.isqrt(n)
    for i in range(3, sqrt_n + 1, 2):
        if n % i == 0:
            return i, n // i

    return n, 1

if __name__ == "__main__":
    import sys
    factors(sys.argv[1])
