#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[]) {
    if (argc < 2) {
        printf("Usage: factors <file>\n"); 
        return 1;
    }

    char *filename = argv[1];
    FILE *fp = fopen(filename, "r");
    if (!fp) {
        printf("Error opening file\n");
        return 1;
    }

    int n;
    while (fscanf(fp, "%d", &n) == 1) {
        for (int i = 2; i <= n/2; i++) {
            if (n % i == 0) {
                printf("%d=%d*%d\n", n, i, n/i);
                break;
            } 
        }
    }

    fclose(fp);
    return 0;
}
